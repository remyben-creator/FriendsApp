<p id="notice"><%= notice %></p>


<table class="table table-striped
                    table-bordered
                    table-hover">
  <thead class="thead-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Instagram</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>

  <tbody>

    <tr>
      <td><%= friend.first_name %></td>
      <td><%= friend.last_name %></td>
      <td><%= friend.email %></td>
      <td><%= friend.phone %></td>
      <td><%= friend.instagram %></td> 
      <td><%= link_to 'Show', friend, class: "btn btn-primary" %></td>
      <td><%= link_to 'Edit', edit_friend_path(friend), class: "btn btn-success" %></td>
      <td><%= button_to 'Destroy', friend, class: "btn btn-danger", method: :delete%></td>
    </tr>
  </tbody>
<% end %>
</table>

<br>
<%= link_to 'New Friend', new_friend_path, class: 'btn btn-primary' %>



