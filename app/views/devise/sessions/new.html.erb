<div class="card">
  <div class="card-header">
    <h2>Log in</h2>
  </div>
  <div class="card-body">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.email_field :email, 
      autofocus: true, 
      autocomplete: "email",
      placeholder: "Email" %>
    </div>

    <br/>

  <div class="field">
    <%= f.password_field :password, 
    autocomplete: "current-password",
    placeholder: "Password" %>
  </div>

  <br/>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: "btn btn-secondary" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-primary" %> 
  </div>

  <br/>
<% end %>

  </div>
</div>


<%= render "devise/shared/links" %>

